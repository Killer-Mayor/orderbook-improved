# Google Sheets Configuration
SHEET_ID=your_google_sheet_id_here

# Flask Configuration
FLASK_SECRET=your-secret-key-change-this-in-production
FLASK_ENV=development

# Service Account (choose one method)
# Method 1: File path (default: looks for service_account.json in project root)
SERVICE_ACCOUNT_FILE=service_account.json

# Method 2: JSON content as environment variable (useful for cloud deployments)
# SERVICE_ACCOUNT_JSON='{"type": "service_account", ...}'

# Optional: Custom worksheet names
# MAIN_WORKSHEET_NAME=orders
# PRODUCT_WORKSHEET_NAME=products
# COMPANY_WORKSHEET_NAME=companies
# BRAND_WORKSHEET_NAME=brands
# DISPATCH_WORKSHEET_NAME=dispatch

# Logging
LOG_LEVEL=INFO

# Server
PORT=5000
